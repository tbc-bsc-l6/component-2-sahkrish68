    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch built-in server and Debug",
            "type": "php",
            "request": "launch",
            "noDebug": false,
            "runtimeArgs": [
                "-S",
                "localhost:8000",
                "-t",
                ".",
                "../vendor/laravel/framework/src/Illuminate/Foundation/resources/server.php"
            ],
            "cwd": "${workspaceRoot}/public",
            "serverReadyAction": {
                "action": "openExternally"
            },
            "envfile": "../.env"
        }
    ]
}